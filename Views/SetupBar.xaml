<Window x:Class="Traffic_Lights.Views.SetupBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Traffic_Lights.Views"
        mc:Ignorable="d"
        Title="Установка программы"
        Height="200" Width="350"
        MaxHeight="200" MaxWidth="350" 
        MinHeight="200" MinWidth="350"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <ProgressBar Minimum="0"
                     Maximum="100"
                     Name="pbStatus" 
                     IsIndeterminate="True" Height="25"
                     Margin="20, 10, 20, 0"/>
        <TextBlock Margin="10, 20, 0, 0" 
                   Text="{Binding SetupState}"/>
    </StackPanel>
</Window>

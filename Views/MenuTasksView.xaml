<Window x:Class="Traffic_Lights.Views.MenuTasksView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Traffic_Lights.ViewsModels"
        mc:Ignorable="d"
        Title="MenuTasksView" 
        Height="900" Width="1200"
        MaxHeight="900" MaxWidth="1200" 
        MinHeight="900" MinWidth="1200">
    <Window.DataContext>
        <local:MenuTasksViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center"
                       Margin="0, 0, 0, 15">Установить программу задачи</TextBlock>
            <Button Content="Установить"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock TextAlignment="Center">Переход в меню отдельных программ "Задачи"</TextBlock>
            <ItemsControl ItemsSource="{Binding GetTaskJobList}" VerticalAlignment="Center">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="{Binding Title}" 
                                    IsEnabled="{Binding Enabled}"
                                    Command="{Binding ClickCommand}"
                                    Margin="0, 15, 0, 0"
                            />
                            <TextBlock Text="{Binding Comment}"   
                                       VerticalAlignment="Center"
                                       Margin="20, 0, 0, 0"
                                       FontSize="15"
                            />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
